<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriviaActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia Question Generator"
        />
    <TextView
        android:id="@+id/numberOfQuestionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Number of Questions"
        android:layout_below="@id/titleText"
        />
    <TextView
        android:id="@+id/categoryOfQuestionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:layout_below="@id/numberOfQuestions"
        />

    <EditText
        android:id="@+id/numberOfQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1-50"
        android:maxLength="50"
        android:inputType="number"
        android:layout_below="@id/numberOfQuestionsText"
   />

    <EditText
        android:id="@+id/categoryOfQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="TODO"
        android:inputType="text"
        android:layout_below="@id/categoryOfQuestionsText"

     />
    <TextView
        android:id="@+id/quizListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz List"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/quizList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-General \n -Video Games \n -Celebrities \n -Sports"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/quizListTitle"
        />
    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correct answer count goes here"
        android:layout_below="@+id/quizList"
        android:layout_alignParentRight="true"
        />


    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Quiz"
        android:layout_below="@id/categoryOfQuestions"
 />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/count"
        android:text="submitAnswer"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="20dp"
        android:id="@+id/myRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitButton"/>

</RelativeLayout>