<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/detailsFragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="AirportName"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/AirportName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detailsFragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="16dp"
                android:text="Terminal"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/terminalName"
                app:layout_constraintTop_toBottomOf="@+id/detailsFragment1" />

            <TextView
                android:id="@+id/detailsFragment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="Gate"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/gateNumber"
                app:layout_constraintTop_toBottomOf="@+id/detailsFragment2" />

            <TextView
                android:id="@+id/detailsFragment4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:text="Delay"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/delayName"
                app:layout_constraintTop_toBottomOf="@+id/detailsFragment3" />

            <TextView
                android:id="@+id/AirportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Airport Name:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/terminalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Terminal:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AirportName" />

            <TextView
                android:id="@+id/gateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Gate Number:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/terminalName" />

            <TextView
                android:id="@+id/delayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Delay:"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gateNumber" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_marginTop="156dp"
                android:backgroundTint="@color/black"
                android:text="Delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="128dp"
                android:layout_height="129dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toEndOf="@+id/detailsFragment2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_airplane_ticket_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>